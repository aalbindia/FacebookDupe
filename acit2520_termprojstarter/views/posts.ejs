<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.classless.min.css"
    />
    <link href="/css/style.css" rel="stylesheet" />
    <title>Homepage</title>
  </head>
  <body>
    <main>
      <div class="authOptions">
        <h1>Homepage</h1>
        <% if (!user) { %>
        <a role="button" href="/auth/login">Login</a>
        <% } else { %>
        <a role="button" href="/auth/logout">Logout</a>
        <% } %>
      </div>
      <h2>Welcome, <%= user?.uname || "Visitor" %>.</h2>
      <div>
        <h4>All Posts</h4>
        <% posts.forEach(post => { %>
        <div class="individualPost">
          <a href="/posts/show/<%=post.id%>"><%= post.title %></a>
          <p><%= post.description %></p>
          <p> Created by <%= users[post.creator].uname %></p>
          <% if (post.creator == user?.id) { %>
            <a role="button" href="/posts/edit/<%= post.id %>" style="font-size: 12px; padding: 4px 4px;">Edit Post</a>
           <a role="button" href="/posts/deleteconfirm/<%= post.id %>" style="font-size: 12px; padding: 4px 4px;">Delete Post</a>
           <% } %>
        </div>
        <% }) %>
      </div>

      <div>
        <a href="/subs/list">List of Subgroups</a>
      </div>
      <% if (user) { %>
      <div>
        <a role="button" href="/posts/create">Create Post</a>
      </div>
      <% } %>
      <!-- <p style="color: rgb(197, 172, 172)">
        ðŸ˜¦ Heads up...you probably want to hide the Create Post button above for
        non-logged-in users!
      </p> -->
    </main>
  </body>
</html>
